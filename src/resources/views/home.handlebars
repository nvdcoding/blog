
   <div class="container">
      <div class="row">
         <div class="col-lg-10 col-md-12 mx-auto">
            {{#each posts}}
            <li class="list-group-item">
               <!-- Custom content-->
               <a href="/posts/{{this._id}}">
                  <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                     <div class="media-body order-2 order-lg-1">
                        <h5 class="mt-0 font-weight-bold mb-2">{{this.title}}</h5>
                        <p class="font-italic text-muted mb-0 small">{{this.description}}</p>
                     </div>
                     <img src={{this.thumbnail}} alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
                  </div>
               </a>
               <!-- End -->
            </li>
            {{/each}}
         </div>
      </div>
      <div class="row">
         <div class="col-lg-10 col-md-12 mx-auto mt-3" id="chapter-nav-bot">
            <div class="float-left">
               <a href="{{prevPage}}" class="float-left" ><button type="button" class="btn btn-outline-info">Trang trước</button></a>
            </div>
            <div class="float-right">
               <a href="{{nextPage}}" class="float-right"><button type="button" class="btn btn-outline-info">Trang sau</button></a>
            </div>
         </div>
      </div>
   </div>